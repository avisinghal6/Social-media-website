<li id="comment-<%= comment._id %>"> 
    <p>
        <% if(locals.user && locals.user.id ==comment.user._id){ %>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%=comment._id %>"> X </a>
            </small>
        <% } %>


        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
    
        
        <small>
        <!-- dsiplay the likes of the comments, if user is logged in, then show the link to toggle likes, else just show count -->
        
        <% if(locals.user){ %>
            <a class="toggle-like-button" data-likes="<%=comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                <%= comment.likes.length %> Likes
            </a>
            <%} else{ %>
                <%=comment.likes.length %> Likes
            <% } %>
        </small>
    </p>
</li>